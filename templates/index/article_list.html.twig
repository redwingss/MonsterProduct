<div class="card">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{ article.image }}" class="card-img-top">
    </div>
    <div class="col-md-8">
      <div class="card-body">
      <br>{% if article.promo == true %}<span class="badge badge-primary">Promo</span>{% endif %}<br>
        <h5 class="card-title">{{ article.name }}</h5>
        <p class="card-text">{{ article.created_ | date('d/m/y') }}</p>
        <a name="button" id="button" class="btn btn-secondary" href="/article/{{ article.id}}" role="button"> en savoir plus </a>
      </div>
    </div>
  </div>
</div>